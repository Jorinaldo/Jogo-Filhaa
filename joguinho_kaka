import tkinter as tk
from PIL import Image, ImageTk


class Personagem:
    def __init__(self, nome, imagem_path, poder):
        self.nome = nome
        self.imagem = Image.open(imagem_path)
        self.poder = poder

class Jogo:
    def __init__(self, root):
        self.root = root
        self.root.title("Jogo da Filha")
        
        # Adicionando personagens
        audrey = Personagem("Audrey", "audrey.png", "Ajudante da raposa")
        isaque = Personagem("Isaque", "isaque.png", "Amigo da Audrey e da raposa")
        yuri = Personagem("Yuri", "yuri.png", "Tio da Audrey, peleiro que não mata animais")
        kiara = Personagem("Kiara", "kiara.png", "Senhora")
        
        self.personagens = [audrey, isaque, yuri, kiara]
        
        # Configurando interface gráfica
        self.canvas = tk.Canvas(root, width=800, height=600)
        self.canvas.pack()

        # Adicionando imagens dos personagens ao canvas
        for personagem in self.personagens:
            personagem.imagem = personagem.imagem.resize((100, 100), Image.ANTIALIAS)
            personagem.imagem = ImageTk.PhotoImage(personagem.imagem)
            personagem.imagem_label = self.canvas.create_image(50, 50, anchor=tk.NW, image=personagem.imagem)

        # Adicionando eventos de clique nas imagens
        for i, personagem in enumerate(self.personagens):
            self.canvas.tag_bind(personagem.imagem_label, '<Button-1>', lambda event, index=i: self.mostrar_poder(index))

    def mostrar_poder(self, index):
        personagem = self.personagens[index]
        tk.messagebox.showinfo("Poder do Personagem", f"{personagem.nome}: {personagem.poder}")

if __name__ == "__main__":
    root = tk.Tk()
    jogo = Jogo(root)
    root.mainloop()
